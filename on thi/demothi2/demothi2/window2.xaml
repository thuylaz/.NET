<Window x:Class="demothi2.window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demothi2"
        mc:Ignorable="d"
        Title="window2" Height="450" Width="800" Loaded="win_loaded">
    <Grid>
        <DataGrid x:Name="dtg_win2"  Margin="86,258,85,0" CanUserAddRows="False" AutoGenerateColumns="False" Height="131" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã sách" Binding="{Binding Masach}" Width="*"/>
                <DataGridTextColumn Header="Tên sách" Binding="{Binding Tensach}" Width="*"/>
                <DataGridTextColumn Header="Mã nxb" Binding="{Binding Manxb}" Width="*"/>
                <DataGridTextColumn Header="Số trang" Binding="{Binding Sotrang}" Width="*"/>
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding thanhtien}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
